var button = document.getElementById('js-lesson-start')

$(button).on('click', function() {
  $(this).replaceWith('<p class="font-weight-bold text-secondary">spaceキーを入力でスタート</p>');
  wait_space_key();
})

function wait_space_key() {
  document.addEventListener('keyup', event => {
    if (event.key == 'x') {
      alert('スペースが押されました');
    }
  })
}
